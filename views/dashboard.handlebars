<div class="container mt-5">
    <h1>Your Dashboard</h1>
    <form action="submit" class="post-form">
        <div class="mb-3">
            <label for="postTitle" class="form-label">New Post Title</label>
            <input type="text" class="form-control" id="postTitle" placeholder="Your new post title goes here...">
          </div>
          <div class="mb-3">
            <label for="postContent" class="form-label">New Post Content</label>
            <textarea class="form-control" id="postContent" rows="3"></textarea>
            <button type="submit" class="btn btn-primary mt-2">Create Post</button>
          </div>
    </form>
</div>