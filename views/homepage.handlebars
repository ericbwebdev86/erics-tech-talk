<div class="container">
    <h1 class="text-center mt-2">Newest Articles</h1>
    <ul class="list-group mt-5">
        {{#each posts as |post|}}
        <li class="list-group-item">
            <a href="/post/{{post.id}}" class="text-decoration-none">
            <h2 class="text-dark">{{post.title}}</h2>
            </a>
        <p>Original Poster: 
            <strong>{{post.user.username}}</strong></p>
        <p>{{post.created_at}}</p>
        <span class="badge bg-primary text-wrap">Comments: {{post.comments.length}}</span></li>
        {{/each}}
    </ul>
</div>